<%- include('header') %>
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <style>
   
   @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300&display=swap');
   @import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Montserrat:wght@100;300;600&display=swap');
      .tb{
          background-color: #FFFF;
          box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
text-align: center;
          border-radius: 20px;
          font-family: 'Montserrat', sans-serif;
      }
  </style>
</head>
<body style="background-color: #EFEFF1;justify-content: center;">
   <div class="container">
<h1 style="text-align: center;font-family: 'Libre Baskerville', serif;margin-top: 10px;">Employee Monitor</h1>
   <div style="display:flex; justify-content:flex-end;"><form action="/checkout"><button class="btn" style="border-radius: 5px;margin-right: 100px; background-color: purple; color: white;font-family: 'Montserrat', sans-serif;" onsubmit="submit">CHECKOUT</button></form></div>
   <div class="tb">
   <table class="table">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Checkin Time</th>
          <th scope="col">Checkout Time</th>
          <th scope="col">Total Time</th>
          <th scope="col">Attendence</th>
          <th scope="col">Activity</th>
        </tr>
      </thead>
      <tbody>
      <tbody>
         <% data.forEach(x =>{ %>
         <tr>
            <td><%= x.date %></td>
            <td><%= x.checkin %></td>
            <td><%= x.checkout %></td>
            <td><%= x.total %></td>
            <td><%= x.attendence %></td>
            <td><form action="/openactivity/<%= x.date %>"><button class="btn btn-primary" style="border-radius: 5px;" onsubmit="submit">Open Activity</button></form></td>
         </tr>
         <% }) %>
      </tbody>
   </table>
   </div>
      
         </div>
           
         
</body>